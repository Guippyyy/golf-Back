generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  // When you are working locally, you should use:
  // url = env('DATABASE_URL')
  url      = ""
}

model course {
  id         Int      @id @default(autoincrement())
  name       String
  locationID Int
  location   location @relation(fields: [locationID], references: [id], map: "Course_locationID_fkey")
  hole       hole[]

  @@index([locationID], map: "Course_locationID_fkey")
}

model hole {
  id        Int    @id @default(autoincrement())
  courseID  Int
  number    Int
  par       Int
  hcp       Int
  distances String
  course    course @relation(fields: [courseID], references: [id], map: "Hole_courseID_fkey")

  @@index([courseID], map: "Hole_courseID_fkey")
}

model location {
  id      Int      @id @default(autoincrement())
  name    String
  image   String
  colours String
  course  course[]
}

model score {
  id        Int      @id @default(autoincrement())
  coursID   Int
  scores    String
  result    Int
  createdAt DateTime @default(now())
  userID String
}
